@model List<CSRF1.Models.Cuenta>
    @{
        ViewBag.Title = "Home Page";
    }

    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horiztal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <label for="monto">Monto</label> <input type="number" id="monto" name="monto" />
        <input type="submit" value="Insertar Monto" />
    }

    

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id Cuenta</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cuenta in Model)
                {
                    <tr>
                        <td>@cuenta.Id</td>
                        <td>@cuenta.Monto</td>
                    </tr>


                }


            </tbody>
        </table>