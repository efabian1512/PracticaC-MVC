@model IEnumerable<Ajaxx.Models.Persona>

<table class="table table-striped">

    <thead>
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var persona in Model)
        {
            <tr>
                <td>@Ajax.ActionLink(persona.Nombre,"DetallePersona",new { PersonaId=persona.Id},new AjaxOptions()
               {
                   HttpMethod="GET",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId="detalle"

               })</td>
                <td>@persona.Edad</td>
            </tr>
        }
    </tbody>
</table>
<div id="detalle">

</div>
@section scripts{
   <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script> 
    
    }
